<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TictactoeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:text="@string/player_one_x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layoutGame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAllCaps="true"
        android:textColor="#FF69B4" />

    <LinearLayout
        android:id="@+id/layoutGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="horizontal"
            style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/button1"
                android:textColor="@color/black"
                android:layout_width="102dp"
                android:layout_height="77dp"
                android:layout_marginStart="50dp"
                style="?android:attr/buttonBarButtonStyle"
                android:backgroundTint="#5D0EE7" />

            <Button
                android:id="@+id/button2"
                android:layout_width="102dp"
                android:layout_height="77dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                style="?android:attr/buttonBarButtonStyle"
                android:backgroundTint="#5D0EE7" />

            <Button
                android:id="@+id/button3"
                android:layout_width="102dp"
                android:layout_height="77dp"
                android:layout_marginEnd="50dp"
                android:textColor="@color/black"
                style="?android:attr/buttonBarButtonStyle"
                android:backgroundTint="#5D0EE7" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="horizontal"
            style="?android:attr/buttonBarStyle">


            <Button
                android:id="@+id/button4"
                android:layout_width="102dp"
                android:layout_height="77dp"
                android:layout_marginStart="50dp"
                android:textColor="@color/black"
                style="?android:attr/buttonBarButtonStyle"
                android:backgroundTint="#5D0EE7" />

            <Button
                android:id="@+id/button5"
                android:layout_width="102dp"
                android:layout_height="77dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                style="?android:attr/buttonBarButtonStyle"
                android:backgroundTint="#5D0EE7" />

            <Button
                android:id="@+id/button6"
                android:layout_width="102dp"
                android:layout_height="77dp"
                android:layout_marginEnd="50dp"
                android:textColor="@color/black"
                style="?android:attr/buttonBarButtonStyle"
                android:backgroundTint="#5D0EE7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="horizontal"
            style="?android:attr/buttonBarStyle">


            <Button
                android:id="@+id/button7"
                android:layout_width="102dp"
                android:layout_height="77dp"
                android:layout_marginStart="50dp"
                android:textColor="@color/black"
                style="?android:attr/buttonBarButtonStyle"
                android:backgroundTint="#5D0EE7" />

            <Button
                android:id="@+id/button8"
                android:layout_width="102dp"
                android:layout_height="77dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                style="?android:attr/buttonBarButtonStyle"
                android:backgroundTint="#5D0EE7" />

            <Button
                android:id="@+id/button9"
                android:layout_width="102dp"
                android:layout_height="77dp"
                android:layout_marginEnd="50dp"
                android:textColor="@color/black"
                style="?android:attr/buttonBarButtonStyle"
                android:backgroundTint="#5D0EE7" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/player_two_o"
        android:textAllCaps="true"
        android:textColor="#03A9F4"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/buttonNewGame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutGame" />

    <Button
        android:id="@+id/buttonNewGame"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:text="@string/new_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginBottom="28dp"
         />

</androidx.constraintlayout.widget.ConstraintLayout>